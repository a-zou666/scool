#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const int N=1e6+10;
char a[N];
ll n,t;
signed main(){
    std::ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    cin>>t;
    while(t--){
        cin>>n;
        if(n%2==0){
            for(ll i=1;i<=n;i++){
                if(i<=n/2) cout<<"(";
                else cout<<")";
            }
            cout<<"\n";
        }else{
            cout<<"I can not sleep tonight!"<<"\n";
        }
    }
    return 0;
}
